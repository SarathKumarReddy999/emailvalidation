<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Appenders>
        <File name="LOGFILE" fileName="src/main/resources/logs/app.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%X{event-id}] %5p %c{1}: %m%n%ex"/>
        </File>
        <File name="SPRINGBOOTFILE" fileName="src/main/resources/logs/spring.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%X{event-id}] %5p %c{1}: %m%n%ex"/>
        </File>
    </Appenders>
    
    <Loggers>
        <Logger name="com.springboot.emailvalidation" level="debug" additivity="false">
            <AppenderRef ref="LOGFILE"/>
        </Logger>
        
        <Root level="info">
            <AppenderRef ref="SPRINGBOOTFILE"/>
        </Root>
    </Loggers>
</Configuration>
